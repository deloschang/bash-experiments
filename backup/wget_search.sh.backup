#!/bin/sh

if (( $# < 2 )); then
  echo "Insufficient arguments"
  exit 1
fi

# first argument should be the url text file
input=$1

# for every word in the provided arguments
for ((i=2;i<=$#;i++))
do
  echo ${!i} # word to search for

  # for every URL in the url.txt file
  for line in `cat "$1"`; do
    echo -ne $line " "   

    ## do the searching and concatenate
    # -O sends it to stdoutput to be piped to grep
    # -F uses fixed match
    # -o grab only the occurrence then pipe to wc -l
    
    wget -q -O - $line | grep -F "${!i}" -o | wc -l 
  done

  echo -e "\n" 

done


